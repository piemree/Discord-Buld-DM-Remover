{
    "manifest_version": 2,
    "name": "Discord Bulk Message Deleter",
    "version": "1.0",
    "description": "Delete Discord messages easily",
    "permissions": [
      "activeTab",
      "https://discord.com/*"
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://discord.com/*"],
        "js": ["content.js"]
      }
    ]
  }